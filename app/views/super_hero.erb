<h1>Create a Team and Heroes!</h1>

<form method="post" action="/teams">
  <label for="team_name">Team Name</label>
  <input id="team_name" type="text" name="team[name]" />
  <label for="team_motto">Team Motto</label>
  <input id="team_motto" type="text" name="team[motto]" />
  <br><br>

  <label for="member1_name">First Member Name</label>
  <input id="member1_name" type="text" name="team[hero][][name]" />
  <label for="member1_power">First Member Power</label>
  <input id="member1_power" type="text" name="team[hero][][power]" />
  <label for="member1_bio">First Member Bio</label>
  <input id="member1_bio" type="text" name="team[hero][][bio]" />
  <br><br>

  <label for="member2_name">Second Member Name</label>
  <input id="member2_name" type="text" name="team[hero][][name]" />
  <label for="member2_power">Second Member Power</label>
  <input id="member2_power" type="text" name="team[hero][][power]" />
  <label for="member2_bio">Second Member Bio</label>
  <input id="member2_bio" type="text" name="team[hero][][bio]" />
  <br><br>

  <label for="member3_name">Third Member Name</label>
  <input id="member3_name" type="text" name="team[hero][][name]" />
  <label for="member3_power">Third Member Power</label>
  <input id="member3_power" type="text" name="team[hero][][power]" />
  <label for="member3_bio">Third Member Bio</label>
  <input id="member3_bio" type="text" name="team[hero][][bio]" />
  <br><br>

  <input type="submit" id="submit">
</form>
